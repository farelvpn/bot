# ----------------------------------------
# KONFIGURASI WAJIB
# ----------------------------------------
# Dapatkan dari @BotFather di Telegram
BOT_TOKEN="MASUKKAN_TOKEN_BOT_TELEGRAM_ANDA"

# URL publik tempat bot Anda akan berjalan (HARUS HTTPS).
# Saat development, gunakan ngrok: https://ngrok.com/
WEBHOOK_URL="https://bot-anda.contoh.com" # kosongi jika default localhost

# User ID Telegram Anda. Dapatkan dari @userinfobot
ADMIN_USER_ID="USER_ID_TELEGRAM_ADMIN"

# ----------------------------------------
# KONFIGURASI PAYMENT GATEWAY
# ----------------------------------------
PAYMENT_GATEWAY_BASE_URL="https://gateway.rerechanstore.eu.org"
PAYMENT_GATEWAY_USERNAME="USERNAME_GATEWAY_ANDA"
PAYMENT_GATEWAY_API_TOKEN="TOKEN_API_GATEWAY_ANDA"

# ----------------------------------------
# KONFIGURASI NOTIFIKASI GRUP
# ----------------------------------------
# Aktifkan atau nonaktifkan notifikasi ke grup (true/false)
GROUP_NOTIFICATION_ENABLED="false" # true = aktif, false = nonactive

# ID Grup target untuk notifikasi. Harus diawali dengan tanda minus (-).
GROUP_NOTIFICATION_CHAT_ID="-100xxxxxxxxxx"

# ID Topik/Thread di dalam grup. Kosongkan jika grup tidak menggunakan topik.
GROUP_NOTIFICATION_TOPIC_ID=""

# ----------------------------------------
# KONFIGURASI TAUTAN (LINK) KOMUNITAS
# ----------------------------------------
# Kosongkan jika tidak ingin menampilkan tombolnya
LINK_TELEGRAM_CHANNEL="https://t.me/your_channel"
LINK_TELEGRAM_GROUP="https://t.me/your_group"
LINK_WHATSAPP_GROUP="https://wa.me/628xxxxxxxxxx"

# ----------------------------------------
# KONFIGURASI OPSIONAL
# ----------------------------------------
STORE_NAME="NAMA TOKO ANDA"
WEBHOOK_PORT=3000

# Path untuk menyimpan file log.
# Pastikan direktori ada atau bisa dibuat oleh aplikasi.
# Contoh: logs/bot.log atau /var/log/bot.log
LOG_PATH="bot.log"
